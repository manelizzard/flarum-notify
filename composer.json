{
    "name": "manelizzard/flarum-ext-notify",
    "description": "Get notified about forum activity in Slack, Hipchat or Gitter.",
    "type": "flarum-extension",
    "license": "MIT",
    "require": {
        "flarum/core": "^0.1.0-beta.6",
        "cleentfaar/slack": "^0.17",
        "gorkalaucirica/hipchat-v2-api-client": "^1",
        "guzzlehttp/guzzle": "^6.1"
    },
    "authors": [
        {
            "name": "Moay",
            "email": "mv@moay.de"
        },
        {
            "name": "Manel",
            "email": "manelizzard@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Moay\\Notify\\": "src/"
        }
    },
     "extra": {
        "flarum-extension": {
            "title": "Notify",
            "icon": {
                "name": "bell",
                "backgroundColor": "#640049",
                "backgroundSize": "100%",
                "backgroundRepeat": "no-repeat",
                "backgroundPosition": "center",
                "color": "#fff"
            }
        }
    }
}
